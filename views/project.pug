extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= project_data.project_name
        p.lead.text-light
          | #{project_data.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each tech in project_data.technologies
            li= tech

       
        a.button.expanded(href=`${project_data.live_link}`) Live Demo
        a.button.expanded(href=`${project_data.github_link}`) GitHub Repo
    
    each image in project_data.image_urls
      img.image(src=`${image}`)
